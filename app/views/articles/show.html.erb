<section class="container mx-auto my-4 p-6 bg-white rounded-lg shadow-xl">
<article>
        <h1 class="text-3xl font-bold text-slate-600 mb-4">
            <%= @article.title %>
        </h1>

        <span class="mb-6 text-sm text-slate-500">
            <%= @article.created_at %>
        </span>

        <p class="text-lg text-slate-700 leading-relaxed mb-8">
            <%= @article.body %>
        </p>

        <div class="flex items-center justify-between">
            <a href="/" class="mt-4 text-blue-600 hover:underline">
            Home
            </a>
            <div class="mt-4 space-x-4">
                <%= link_to "Edit", edit_article_path(@article), class: "mt-4 text-blue-600 hover:underline" %>
                <%= link_to "Destroy", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "mt-4 text-red-600 hover:underline" %>
            </div>
        </div>
    </article>

    <article class="mt-3 bg-slate-50 p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-bold text-slate-600 mb-4">Comments</h2>

        <%= render @article.comments %>

    </article>

    <article class="mt-3">
        <h2 class="text-xl font-bold text-slate-600 mb-4">Add a comment:</h2>
        <%= render 'comments/form' %>
    </article>
</section>